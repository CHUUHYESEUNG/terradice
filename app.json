{
  "expo": {
    "name": "terradice",
    "slug": "terradice",
    "version": "1.0.0",
    "scheme": "terradice",

    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },

    "experiments": {
      "tsconfigPaths": true
    },

    "plugins": [
      [
        "expo-router",
        {
          "root": "./app"
        }
      ]
    ],

    "orientation": "portrait",
    "icon": "./assets/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1E38"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.terradice.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0B1E38"
      },
      "package": "com.terradice.app"
    }
  }
}
